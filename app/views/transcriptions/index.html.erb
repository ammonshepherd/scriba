<h1>Listing Transcriptions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>User name</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Transcription</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transcriptions.each do |transcription| %>
      <tr>
        <td><%= transcription.title %></td>
        <td><%= transcription.user_name %></td>
        <td><%= image_tag(transcription.picture_url(:thumb), class: "spot") if transcription.picture.present? %></td>
        <td><%= transcription.description %></td>
        <td><%= transcription.transcription %></td>
        <td><%= link_to 'Show', transcription %><br>
        <%= link_to 'Edit', edit_transcription_path(transcription) %><br>
        <%= link_to 'Destroy', transcription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transcription', new_transcription_path %>
